{
	"type": "modal",
	"title": {
		"type": "plain_text",
		"text": "Timesheets bot V2"
	},
	"submit": {
		"type": "plain_text",
		"text": "Submit"
	},
	"close": {
		"type": "plain_text",
		"text": "Cancel"
	},
	"blocks": [
		{
			"type": "input",
			"block_id": "activity-block",
			"element": {
				"type": "plain_text_input",
				"action_id": "activity-action",
				"min_length": 3,
				"max_length": 1023,
				"initial_value": ""
			},
			"label": {
				"type": "plain_text",
				"text": "{@time_period@}, I mainly did [### for holidays]:"
			}
		},
		{
			"type": "divider"
		},
		{
			"type": "section",
			"block_id": "type-block",
			"text": {
				"type": "mrkdwn",
				"text": "Was that mainly:"
			},
			"accessory": {
				"type": "static_select",
				"action_id": "type-action",
				"placeholder": {
					"type": "plain_text",
					"text": "Select an item"
				},
				"options": []
			}
		},
		{
			"type": "section",
			"block_id": "cir-block",
			"text": {
				"type": "mrkdwn",
				"text": "Can it be part of a program ?"
			},
			"accessory": {
				"type": "radio_buttons",
				"action_id": "program-action",
				"options": [
					{
						"text": {
							"type": "mrkdwn",
							"text": "CIR: _R&D activities_"
						},
						"value": "cir"
					},
					{
						"text": {
							"type": "mrkdwn",
							"text": "CII: _new features/ideas for the product_"
						},
						"value": "cii"
					},
					{
						"text": {
							"type": "mrkdwn",
							"text": "Other BPI projects (Aqua ...)"
						},
						"value": "bpi"
					},
					{
						"text": {
							"type": "mrkdwn",
							"text": "No"
						},
						"value": "no"
					}
				]
			}
		},
	]
}
